//ДЗ. Написать функцию, выводящую смайлик
func heart() {
    print("\u{1F497}")
}

func heart2() {
    print("\u{1F496}")
}

func heart3() {
    print("\u{1F498}")
}
print(heart(), heart2(), heart3())


//Задача. Функция которая принимает два параметра - строку и символ шахматной клетки - и выводит белая или чёрная эта клетка

func chessFunction(letter: String, number: Int) -> String {
    var chessField: String
    if number % 2 == 0 && (letter == "A" || letter == "C" || letter == "E" || letter == "G") {
        print("White")
        chessField = "White"
    } else if number % 2 != 0 && (letter == "B" || letter == "D" || letter == "F" || letter == "H") {
        print("White")
        chessField = "White"
    } else {
        print("Black")
        chessField = "Black"
    }
    return chessField
}

chessFunction(letter: "B", number: 2)

let chessFieldA2 = chessFunction(letter: "A", number: 2)


//Задача. Функция, которая принимает массив и выдаёт его в обратном порядке

var arrayToFlip = [1, 2, 3, 4, 5, 6, 7, 8, 9]

func flip(array: [Int]) -> [Int] {
    var arrayReverse = array
    arrayReverse.reverse()
    return arrayReverse
}

flip(array: arrayToFlip)
arrayToFlip

//Задача. То же самое только с изменением массива

func flip2(array: inout [Int]) {
    array.reverse()
}

flip2(array: &arrayToFlip)
arrayToFlip


//Задача. Функция, принимающая строку и возвращающая её без знаков препинания, гласные переведены в заглавные


var textToTrash = "Смертная казнь - это дискуссионная тема, которая из года в год, особенно по случаю громких преступлений, выявляет множество, как сторонников, так и противников высшей меры наказания. Несмотря на то, что в большинстве стран, учитывая политически и социально слабо развитые, эта мера наказания отменена, она сохранена в США, а, согласно данным опроса фонда «Общественное мнение» 2019 года, 69% россиян считают правильным лишение жизни за некоторые преступления (педофилия, убийство, терроризм) (https://ria.ru/20191101/1560486013.html)."

//Функция, которая заменяет символ
func letterReplacer(text: inout String, number: Int, character: Character) -> String {
    text.remove(at: text.index(text.startIndex, offsetBy: number))
    text.insert(character, at: text.index(text.startIndex, offsetBy: number))
    return text
}


func perversionText(text: inout String) -> String {
    var index = -1
    for i in text {
        index += 1
        switch i {
    case ".", ",", "-", "%", "(", ")", ":", ";", "/", "«", "»":
        letterReplacer(text: &text, number: index, character: " ")
    case "а":
        letterReplacer(text: &text, number: index, character: "А")
    case "я":
        letterReplacer(text: &text, number: index, character: "Я")
    case "у":
        letterReplacer(text: &text, number: index, character: "У")
    case "ю":
        letterReplacer(text: &text, number: index, character: "Ю")
    case "о":
        letterReplacer(text: &text, number: index, character: "О")
    case "е":
        letterReplacer(text: &text, number: index, character: "Е")
    case "ё":
        letterReplacer(text: &text, number: index, character: "Ё")
    case "э":
        letterReplacer(text: &text, number: index, character: "Э")
    case "и":
        letterReplacer(text: &text, number: index, character: "И")
    case "ы":
        letterReplacer(text: &text, number: index, character: "Ы")
    default: break
        }
    }
    print(text)
    return text
}

perversionText(text: &textToTrash)




var text2h = "Чёткие, стройные ритмы сопровождаются мелодичными синтами, которые, затем могут смениться кислотным глитчем. Хитросплетённые тексты, идущие пулемётным речитативом, кажутся необъятным потоком сознания."

text2h[text2h.startIndex]
text2h[text2h.index(before: text2h.endIndex)]
text2h[text2h.index(after: text2h.startIndex)]
let index = text2h.index(text2h.startIndex, offsetBy: 1)
text2h[index]
text2h.index(text2h.startIndex, offsetBy: 0)
text2h[text2h.index(text2h.startIndex, offsetBy: 0)]

text2h.remove(at: text2h.index(text2h.startIndex, offsetBy: 0))
text2h.insert("Ч", at: text2h.index(text2h.startIndex, offsetBy: 0))
