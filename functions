//Функция, ничего не принимающая и ничего не возвращающая

func sayHello() {
    print("ugabuga")
}
sayHello()

//Функция, принимающая один параметр. Прибавляет единицу
func oneParam(param: Int) {
    var param = param
    param += 1
}

oneParam(param: 10)


//Функция, не принимающая параметров, но возвращающая значение
func returnValue() -> Int {
    return 10
}
returnValue()


//Функция, принимающая несколько параметров и возвращающая значение. Самая распространённая
func giveMeYour(name: String, andSecondName: String) -> String {
    return "your full name is \(name) \(andSecondName)"
}
giveMeYour(name: "zhora", andSecondName: "pikalyov")


//Функция, принимающая массив в качестве параметра и использующая вложенную функцию для работы. Складывает числа и печатает сумму
func calcMoney(array: [Int]) -> Int {
    var sum = 0
    func sayMoney() {
        print(sum)
    }
    for item in array {
        sum += item
    }
    sayMoney()
    return sum
}

calcMoney(array: [1, 234])


//Функция, которая принимает переменное число параметров
func findSum(ofIntegers integers: Int...) -> Int {
    var sum = 0
    for item in integers {
        sum += item
    }
    return sum
}

//Функция в качестве возвращаемого значения
func whatToDo(missed: Bool) -> ((Int) -> Int) {
    func missCountUp(input: Int) -> Int { return input + 1 }
    func missCountDown(input: Int) -> Int { return input - 1 }
    return missed ? missCountUp : missCountDown
}


//Можно пропускать имена параметров функции
func sum(_: Int) -> Int {
    return 10
}

sum(20)











let wallet = [5, 10, 100, 2, 50, 1, 1, 50, 20, 10, 20, 20]

func moneyCalculator(inArray: [Int], withDenomination wDen: Int) -> (total: Int, count: Int) {
    var sum = 0
    var count = 0
    for i in wallet {
        if i == wDen {
            sum += i
            count += 1
        }
    }
    return (sum, count)
}
moneyCalculator(inArray: wallet, withDenomination: 20).count
 

